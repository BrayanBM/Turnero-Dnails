<style>
	main {
		height: 100vh;
		margin: 0px;
    font-family: 'Kalnia', serif;
    display: flex;
    flex-direction: column;
    align-items: center;
	}
	h1{
    font-size: 28px;
    color: #AF9383;
    font-weight: 400;
    margin: 0;
	text-align: center;
}
H2{
    margin: 0;
    font-weight: 300;
}

.top-title{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.container{
    max-width: calc(100vw - 28px);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 12px;
}

.card{
    background-color: #ffffff36;
	border: solid 2px rgba(245, 245, 245, 0.412);
    color: #AF9383;
    border-radius: 10px;
    height:80px ;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-weight: 400;
}

.horarios{
    display: flex;
    flex-direction: row;
}
article {
    position: relative;
    width: 60px;
    height: 30px;
    margin: 5px;
    float: left;
    border: 1px solid #AF9383;
    border-radius: 4px;
    font-size: 14px;
  }
  
  article div {
    width: 100%;
    height: 100%;
    display: flex;
    border-radius: 2px;
    color: #AF9383;
    justify-content: center;
    align-items: center;
    line-height: 25px;
    transition: .2s ease;
  }
  
  article input {
    position: absolute;
    top: 0;
    left: 0;
    width: 60px;
    height: 30px;
    opacity: 0;
    cursor: pointer;
  }
  
  input[type=checkbox]:checked ~ div {
    background-color: #c2a99c6d;
  }
  
  .svg1{
    position: absolute;
    height: 140px;
    z-index: 10;
    top: 0px;
    left: 0px;
  }
  .svg2{
    position: absolute;
    height: 20px;
    z-index: 10;
    bottom: 0px;
    right: 0px;
    transform: rotate(180deg);
  }

  .icon{
	display: flex;
	justify-content: center;
	margin-block: 24px;
  }

  @media (width >= 1000px) {
   .svg2,.svg1{
    height: 600px;
   }
  }
  

</style>
